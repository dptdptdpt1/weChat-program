# 环境变量示例文件
# 复制此文件为 .env 并填入实际值

# 应用配置
APP_NAME="宝利足球赛事通 API"
DEBUG=True

# 数据库配置
# SQLite (默认)
DATABASE_URL=sqlite:///./football_events.db

# PostgreSQL (可选)
# DATABASE_URL=postgresql://user:password@localhost/football_events

# MySQL (可选)
# DATABASE_URL=mysql+pymysql://user:password@localhost/football_events

# 微信小程序配置
# WECHAT_APP_ID=your-app-id
# WECHAT_APP_SECRET=your-app-secret

# API 密钥
# SECRET_KEY=your-secret-key-here
